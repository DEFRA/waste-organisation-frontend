{% extends 'layouts/page.njk' %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Spreadsheet update successful",
        headingLevel: 1
      })}}

      <h3 class="govuk-!-padding-top-4 govuk-heading-m">{{content.heading}}</h3>

      {% for text in content.text %}
        <p class="govuk-body">{{ text }}</p>
      {% endfor %}

      <p class="govuk-body govuk-!-padding-top-4">
        <a class="govuk-link govuk-link--no-visited-state" href="{{returnAction.link}}">{{returnAction.text}}</a>
      </p>

    </div>
  </div>
</div>
{% endblock %}
